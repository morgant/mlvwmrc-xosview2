#!/bin/sh

#  
# xosview2_mini - generate a small 60 second graph for a meter
# 

format="$1" # load, mem, swap, or net
custom_options=""
case "$format" in
  "filesys")
    custom_options="-o ${format}Mounts:${2}"
    ;;
  "net")
    custom_options="-o ${format}Iface:${2}"
    ;;
esac

xosview2 -title "xosview2_mini ${format}" -geometry 30x24 -bg white -o "horizontalMargin: 0" -o "verticalMargin: 0" -o "verticalSpacing: 0" -o "captions: False" -o "labels: False" -o "usedlabels: False" -o "graphNumCols: 30" -o "load: False" -o "cpu: False" -o "mem: False" -o "swap: False" -o "irqrate: False" -o "page: False" -o "gfx: False" -o "wlink: False" -o "net: False" -o "NFSStats: False" -o "NFSDStats: False" -o "interrupts: False" -o "tzone: False" -o "lmstemp: False" -o "coretemp: False" -o "bsdsensor: False" -o "battery: False" -o "disk: False" -o "filesys: False" -o "RAID: False" -o "${format}: True" -o "${format}Priority: 20" -o "${format}Graph: True" $custom_options
